    <column>
	<name>value</name>
	<type>string</type>
	<default></default>
	<size>128</size>
    </column>
    <column>
	<name>type</name>
	<type>int</type>
	<default>0</default>
    </column>
    <column>
	<name>modified</name>
	<type>datetime</type>
    </column>
    <index>
	<colref linkend="attribute"/>
	<colref linkend="username"/>
	<colref linkend="domain"/>
    </index>
