<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table PUBLIC "-//iptel.org//DTD DBSchema V1.0//EN"
  "http://iptel.org/dbschema/dtd/1.0/dbschema.dtd" [

<!ENTITY % entities SYSTEM "entities.xml">
%entities;

]>

<table role="presence" xmlns:db="http://docbook.org/ns/docbook">

	<name>presentity_contact</name>
	
	<!-- related to the version of presence snapshot -->
	<version>5</version>
    
	<!-- presentity ID -->
	<column id="prescontact.pres_id">
		<name>pres_id</name>
		<type>string</type>
		<size>64</size>
	</column>

	<!-- basic status -->
	<column>
		<name>basic</name>
		<type>int</type>
		<size>3</size>
	</column>

	<column>
		<name>expires</name>
		<type>datetime</type>
		<default>2004-05-28 21:32:15</default>
	</column>

	<column>
		<name>priority</name>
		<type>float</type>
		<default>0.5</default>
	</column>

	<column>
		<name>contact</name>
		<type>string</type>
		<size>&uri_len;</size>
		<null/>
	</column>

	<!-- tuple ID -->
	<column id="prescontact.tupleid">
		<name>tupleid</name>
		<type>string</type>
		<size>64</size>
	</column>

	<!-- published with this entity tag (only published tuples are stored
	into database) -->
	<column>
		<name>etag</name>
		<type>string</type>
		<size>64</size>
	</column>

	<!-- tuple must published with ID (see PIDF spec.) -->
	<column>
		<name>published_id</name>
		<type>string</type>
		<size>64</size>
	</column>

	<index>
		<name>presid_index</name>
		<colref linkend="prescontact.pres_id"/>
		<colref linkend="prescontact.tupleid"/>
		<unique/>
	</index>

</table>
